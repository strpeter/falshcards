	<select name="folder">
		{% for folder in folders %}
		<option {% if card.ffolder.idfolder == folder.idfolder %}selected{% endif %} value="{{ folder.idfolder }}">
			{{ folder.name }}
		</option>
		{% endfor %}
	</select>
	<input type="Submit">
</form>
{% endblock %}
